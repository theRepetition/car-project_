<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button pressed state -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#eeeeee"
                        android:endColor="#aaaaaa"/>
                    <stroke android:width="12dp" android:color="#aaaaaa"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/start_icon_1" />
            </item>
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>

            <item>
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#ffffff"
                        android:endColor="#a7a9a8"/>
                    <stroke android:width="12dp" android:color="#aaaaaa"/>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/start_icon_1" />
            </item>
        </layer-list>
    </item>
</selector>
